# Firebase Configuration
FIREBASE_PROJECT_ID=journeyman-jobs-dev
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=journeyman-jobs-dev.firebaseapp.com
FIREBASE_STORAGE_BUCKET=journeyman-jobs-dev.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012

# SendGrid Email Service (Required for job sharing)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=no-reply@journeymanjobs.com
SENDGRID_FROM_NAME=Journeyman Jobs

# Twilio SMS Service (Optional for SMS sharing)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15551234567

# Deep Linking Configuration
DEEP_LINK_SCHEME=journeymanjobs
DEEP_LINK_HOST=share
APP_STORE_ID=123456789
GOOGLE_PLAY_ID=com.journeymanjobs.app

# Analytics (Optional)
MIXPANEL_TOKEN=your_mixpanel_token
SENTRY_DSN=your_sentry_dsn

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=debug
ENABLE_ANALYTICS=false

# Job Sharing Feature Flags
ENABLE_EMAIL_SHARING=true
ENABLE_SMS_SHARING=true
ENABLE_CONTACT_PICKER=true
ENABLE_CREW_MANAGEMENT=true
MAX_SHARE_RECIPIENTS=10
SHARE_COOLDOWN_MINUTES=5