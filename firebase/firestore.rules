rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Posts collection rules
    match /posts/{postId} {
      // Allow read access for authenticated users on global posts
      allow read: if request.auth != null && resource.data.crewId == 'global';
      
      // Allow write access for authenticated users creating global posts
      allow create: if request.auth != null && request.resource.data.crewId == 'global';
      
      // Allow write access for authenticated users updating their own global posts
      allow update, delete: if request.auth != null &&
        resource.data.crewId == 'global' &&
        resource.data.authorId == request.auth.uid;
    }
    
    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}