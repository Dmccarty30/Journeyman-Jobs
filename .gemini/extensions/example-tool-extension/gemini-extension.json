{
  "name": "example-tool-extension",
  "version": "0.1.0",
  "description": "An example extension demonstrating a custom tool.",
  "tools": [
    {
      "name": "say_hello",
      "description": "Says hello to a given name.",
      "parameters": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name to greet."
          }
        },
        "required": ["name"]
      },
      "callCommand": "node .gemini/extensions/example-tool-extension/say_hello.js"
    }
  ]
}